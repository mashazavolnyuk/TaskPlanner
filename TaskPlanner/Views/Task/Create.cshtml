@model TaskPlanner.Models.TaskInputModel

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>TaskInputModel</legend>

        @Html.DropDownList("CategoryId", null, new { @name = "CategoryId" });

        <div class="editor-label">
            @Html.LabelFor(model => model.Text)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Text)
            @Html.ValidationMessageFor(model => model.Text)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Date)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Date)
            @Html.ValidationMessageFor(model => model.Date)
        </div>

        <h3>SubTasks</h3>
        @for (int i = 0; i < 5; i++)
        {
            <div class="editor-label">
                @Html.LabelFor(model => model.SubTasks[i].Text)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.SubTasks[i].Text)
                @Html.ValidationMessageFor(model => model.SubTasks[i].Text)
            </div>
        }

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}